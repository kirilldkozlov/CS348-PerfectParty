<% if notice %>
  <p class="alert alert-info mt-2"><%= notice %></p>
<% else %>
  <p></p>
<% end %>

<div class="jumbotron">
  <h1>Decor Items<h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Decor</th>
      <th scope="col">Item</th>
      <th scope="col">Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @decor_items.each do |decor_item| %>
      <tr>
        <td><%= decor_item.id %></td>
        <td><%= link_to decor_item.decor.name, decor_path(decor_item.decor) %></td>
        <td><%= link_to decor_item.item.name, item_path(decor_item.item) %></td>
        <td><%= decor_item.quantity %></td>
        <td><%= link_to 'Show', decor_item %></td>
        <td><%= link_to 'Edit', edit_decor_item_path(decor_item) %></td>
        <td><%= link_to 'Destroy', decor_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Decor Item', new_decor_item_path, :class => "btn btn-primary" %>
