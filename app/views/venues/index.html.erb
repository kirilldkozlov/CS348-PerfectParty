<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <h1>Venues<h1>
</div>

<div class="input-group mb-3">
  <%= hidden_field_tag 'old-val', @city %>
  <%= text_field_tag "city", @city, placeholder: "Search by city", class: "search-text" %>
  <div class="input-group-append">
    <%=button_tag 'Search', type: 'button', class: "btn btn-sm btn-secondary search-btn"  %>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @venues.each do |venue| %>
      <tr>
        <td><%= venue.id %></td>
        <td><%= venue.name %></td>
        <td><%= venue.cost %></td>
        <td><%= link_to 'Show', venue %></td>
        <td><%= link_to 'Edit', edit_venue_path(venue) %></td>
        <td><%= link_to 'Destroy', venue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Venue', new_venue_path, class: "btn btn-primary" %>
