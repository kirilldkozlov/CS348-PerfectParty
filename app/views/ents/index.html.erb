<% if notice %>
  <p class="alert alert-info mt-2"><%= notice %></p>
<% else %>
  <p></p>
<% end %>

<div class="jumbotron">
  <h1>Ents<h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ents.each do |ent| %>
      <tr>
        <td><%= ent.id %></td>
        <td><%= ent.name %></td>
        <td><%= ent.desc %></td>
        <td><%= link_to 'Show', ent %></td>
        <td><%= link_to 'Edit', edit_ent_path(ent) %></td>
        <td><%= link_to 'Destroy', ent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ent', new_ent_path, :class => "btn btn-primary" %>
