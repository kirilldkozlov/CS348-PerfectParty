<p></p>

<div class="jumbotron">
  <h1>Addresses<h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Street num</th>
      <th scope="col">Street name</th>
      <th scope="col">Postal code</th>
      <th scope="col">City</th>
      <th scope="col">Province</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.street_num %></td>
        <td><%= address.street_name %></td>
        <td><%= address.postal_code %></td>
        <td><%= address.city %></td>
        <td><%= address.province %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_address_path, :class => "btn btn-primary" %>
