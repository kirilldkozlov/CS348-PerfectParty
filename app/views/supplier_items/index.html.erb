<% if notice %>
  <p class="alert alert-info mt-2"><%= notice %></p>
<% else %>
  <p></p>
<% end %>

<div class="jumbotron">
  <h1>Supplier Items
    <h1>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Supplier</th>
          <th scope="col">Item</th>
          <th scope="col">Quantity</th>
          <th scope="col">Cost</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @supplier_items.each do |supplier_item| %>
          <tr>
            <td><%= supplier_item.id %></td>
            <td><%= supplier_item.supplier.full_name  %></td>
            <td><%= supplier_item.item.name %></td>
            <td><%= supplier_item.quantity %></td>
            <td><%= supplier_item.cost %></td>
            <td><%= link_to 'Show', supplier_item %></td>
            <td><%= link_to 'Edit', edit_supplier_item_path(supplier_item) %></td>
            <td><%= link_to 'Destroy', supplier_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <%= link_to 'New Supplier Item', new_supplier_item_path, :class => "btn btn-primary" %>
