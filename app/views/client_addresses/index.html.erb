<% if notice %>
  <p class="alert alert-info mt-2"><%= notice %></p>
<% else %>
  <p></p>
<% end %>

<div class="jumbotron">
  <h1>Client Addresses<h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Client</th>
      <th scope="col">Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @client_addresses.each do |client_address| %>
      <tr>
        <td><%= client_address.id %></td>
        <td><%= client_address.client.full_name %></td>
        <td><%= client_address.address.full_address %></td>
        <td><%= link_to 'Show', client_address %></td>
        <td><%= link_to 'Edit', edit_client_address_path(client_address) %></td>
        <td><%= link_to 'Destroy', client_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Client Address', new_client_address_path, :class => "btn btn-primary" %>
