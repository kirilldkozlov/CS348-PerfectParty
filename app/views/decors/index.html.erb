<% if notice %>
  <p class="alert alert-info mt-2"><%= notice %></p>
<% else %>
  <p></p>
<% end %>

<div class="jumbotron">
  <h1>Decors<h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @decors.each do |decor| %>
      <tr>
        <td><%= decor.id %></td>
        <td><%= link_to 'Show', decor %></td>
        <td><%= link_to 'Edit', edit_decor_path(decor) %></td>
        <td><%= link_to 'Destroy', decor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Decor', new_decor_path, :class => "btn btn-primary" %>
